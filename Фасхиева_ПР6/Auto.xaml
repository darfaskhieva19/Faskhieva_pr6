<Page x:Class="Фасхиева_ПР6.Auto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Фасхиева_ПР6"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid VerticalAlignment="Center">
        <StackPanel Width="400" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Text="Авторизация" Style="{StaticResource Header}"/>
            <GroupBox Header="Логин">
                <TextBox Name="tbLogin"/>
            </GroupBox>
            <GroupBox Header="Пароль">
                <PasswordBox Name="tbPassword"/>
            </GroupBox>
            <Button x:Name="btAuto" Content="Войти" Width="150" Click="btAuto_Click"  Template="{StaticResource Btn1}"/>
        </StackPanel>
    </Grid>
</Page>
