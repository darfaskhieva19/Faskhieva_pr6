<Window x:Class="Фасхиева_ПР6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Фасхиева_ПР6"
        mc:Ignorable="d"
        Title="Центр спортивного отдыха" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#E6F8D5">
            <Image Source="\Picture\logo.png" Margin="5"/>
            <TextBlock Text="Центр спортивного центра" Style="{StaticResource Header}"/>
            <StackPanel Margin="50, 10,0,0">
                <Button Name="btAuto" Content="Авторизироваться" Click="btAuto_Click" Template="{StaticResource Btn}"/>
                <Button Name="btReg" Content="Зарегистироваться" Click="btReg_Click" Template="{StaticResource Btn}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="#F4FAEE">
            <Frame Name="Mframe" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
