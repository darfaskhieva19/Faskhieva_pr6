<Page x:Class="Фасхиева_ПР6.PageGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Фасхиева_ПР6"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGroup">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="395"/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="lGroup">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"></WrapPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="3" CornerRadius="5" BorderThickness="1" BorderBrush="Black">
                            <Grid Name="gridM" Width="300" Height="200" Background="{Binding ColorCost}">
                                <StackPanel>
                                    <TextBlock Text="{Binding title}"/>
                                    <TextBlock Text="{Binding price, StringFormat=Стоимость за одно занятие: {0} руб.}"/>  
                                    
                                    <TextBlock Uid="{Binding idGroup}" Name="tbCost" Loaded="tbCost_Loaded"/>
                                    <TextBlock Name="tbInstruction" Uid="{Binding idInstruct}" TextWrapping="Wrap" Loaded="tbInstruction_Loaded"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="2">
            <Button Name="btnBack" Content="Вернуться в меню" Click="btnBack_Click" Template="{StaticResource Btn2}"/>
        </StackPanel>
    </Grid>
</Page>
